<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomDashboard"
        android:layout_alignParentTop="true" />

    <SurfaceView
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomDashboard"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent" />

    <ImageView
        android:id="@+id/staticImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomDashboard"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:scaleType="fitCenter"
        android:background="@android:color/black" />

    <!-- Top overlay: FPS and Back button -->
    <LinearLayout
        android:id="@+id/topOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#80000000"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="16dp">

        <!-- <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="Back"
            android:scaleType="fitCenter"
            android:padding="8dp" /> -->

        <TextView
            android:id="@+id/fpsTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FPS: --"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingLeft="8dp" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_manage"
            android:contentDescription="Settings"
            android:scaleType="fitCenter"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Bottom Control Bar -->
    <LinearLayout
        android:id="@+id/controlBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomDashboard"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        android:background="#80000000">

        <Button
            android:id="@+id/cameraButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="ðŸ“· Camera"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="@android:drawable/btn_default" />

        <Button
            android:id="@+id/uploadButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="ðŸ“ Upload"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="@android:drawable/btn_default" />

    </LinearLayout>

    <!-- Bottom Dashboard -->
    <LinearLayout
        android:id="@+id/bottomDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="#CC000000"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:id="@+id/dashboardItem1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="12dp"
            android:background="@android:drawable/dialog_holo_dark_frame"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/dashboardEmoji1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”"
                android:textSize="32sp"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/dashboardCount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dashboardItem2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="12dp"
            android:background="@android:drawable/dialog_holo_dark_frame"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/dashboardEmoji2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”"
                android:textSize="32sp"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/dashboardCount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

    <!-- Left-edge swipe area for back gesture -->
    <View
        android:id="@+id/edgeSwipeArea"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:clickable="true" />

    <!-- Chevron indicator shown during swipe-back -->
    <ImageView
        android:id="@+id/edgeChevron"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:src="@android:drawable/ic_media_previous"
        android:tint="@android:color/white" />

</RelativeLayout>
